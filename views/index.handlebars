<div class="row">
  <div class="col-xs-2 col-sm-3 col-md-4 uneaten">
    <h3>Burgers to Eat</h3>
    <form>
      <ul>
        {{#each burgers}}


        {{#if devoured}}
        {{else}}

        <li> {{this.burger_name}} <button type="submit" class="btn btn-warning btn-xs devoured" burger_id={{this.id}}>Devour</button></li>
       
        {{/if}}

        {{/each}}


      </ul>

    </form>


    <h3>Burgers Eaten</h3>
    <form>
      <ul>
        {{#each burgers}}


        {{#if devoured}}

        <li> {{this.burger_name}} <button type="submit" class="btn btn-warning btn-xs devoured" burger_id={{this.id}}>Devoured</button></li>
        
        {{else}}

        {{/if}}

        {{/each}}



      </ul>

    </form>
  </div>
  <div class="col-xs-8 col-sm-6 col-md-4" id="sign">
    <img src="assets/Yummy-Burger-PNG.png">
    <h1>Eat-Da-Burger!</h1>
  </div>
  <div class="col-xs-2 col-sm-3 col-md-4"></div>
</div>

<div class="row">
  <div class="col-xs-2 col-sm-3 col-md-4">
  </div>
  <div class="col-xs-8 col-sm-6 col-md-4" id="addBurger">
    <form method="POST" action="/create">
      <p>Enter a type of burger you would like to eat & click 'Add Burger'.</p>
      <textarea class="form-control" rows="2" name="burger_name"></textarea>
      <button type="submit" class="btn btn-danger" id="submit">Add Burger</button>
    </form>
  </div>
  <div class="col-xs-2 col-sm-3 col-md-4">

  </div>
</div>